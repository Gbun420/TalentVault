{
  "kind": "collectionType",
  "collectionName": "companies",
  "info": {
    "singularName": "company",
    "pluralName": "companies",
    "displayName": "Company"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "name"
    },
    "description": {
      "type": "blocks"
    },
    "website": {
      "type": "string"
    },
    "size": {
      "type": "enumeration",
      "enum": [
        "micro",
        "small",
        "medium",
        "large",
        "enterprise"
      ],
      "default": "small"
    },
    "industry": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::industry.industry",
      "inversedBy": "companies"
    },
    "location": {
      "type": "component",
      "component": "shared.location"
    },
    "logo": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images"
      ]
    },
    "verified": {
      "type": "boolean",
      "default": false
    },
    "contactEmail": {
      "type": "email"
    },
    "contactPhone": {
      "type": "string"
    },
    "socials": {
      "type": "component",
      "component": "profile.social-link",
      "repeatable": true
    },
    "employers": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::employer.employer",
      "mappedBy": "company"
    },
    "jobs": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::job.job",
      "mappedBy": "company"
    },
    "subscriptions": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::subscription.subscription",
      "mappedBy": "company"
    },
    "payments": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::payment.payment",
      "mappedBy": "company"
    }
  }
}
